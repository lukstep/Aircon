{
    "name": "PicoSDK",
    "image": "lukstep/raspberry-pi-pico-sdk:latest",
    "runArgs": [
        "--env-file",
        ".devcontainer/devcontainer.env"
    ],
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-vscode.cpptools",
                "llvm-vs-code-extensions.vscode-clangd",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "josetr.cmake-language-support-vscode",
                "marus25.cortex-debug",
                "augustocdias.tasks-shell-input"
            ]
        }
    },
    // "initializeCommand": "openocd -f interface/cmsis-dap.cfg -f target/rp2040.cfg -c 'bindto 0.0.0.0' -c 'adapter speed 5000'",
    "postCreateCommand": "apt install clang-extra-tools gdb-multiarch"
}